package app

import (
	"context"
	"net/http"

	"github.com/adrianpk/boletus/pkg/web"
	"github.com/go-chi/chi"
)

// These handlers require authorization
func (app *App) addWebTicketRouter(parent chi.Router) chi.Router {
	return parent.Route("/accounts", func(uar chi.Router) {
		uar.Use(app.WebEP.ReqAuth)
		uar.Get("/", app.WebEP.IndexTickets)
		uar.Get("/new", app.WebEP.NewTicket)
		uar.Post("/", app.WebEP.CreateTicket)
		uar.Route("/{slug}", func(uarid chi.Router) {
			uarid.Use(accountCtx)
			uarid.Get("/", app.WebEP.ShowTicket)
			uarid.Get("/edit", app.WebEP.EditTicket)
			uarid.Patch("/", app.WebEP.UpdateTicket)
			uarid.Put("/", app.WebEP.UpdateTicket)
			uarid.Post("/init-delete", app.WebEP.InitDeleteTicket)
			uarid.Delete("/", app.WebEP.DeleteTicket)
		})
	})
}

func accountCtx(next http.Handler) http.Handler {
	return http.HandlerFunc(func(w http.ResponseWriter, r *http.Request) {
		slug := chi.URLParam(r, "slug")
		ctx := context.WithValue(r.Context(), web.SlugCtxKey, slug)
		next.ServeHTTP(w, r.WithContext(ctx))
	})
}
